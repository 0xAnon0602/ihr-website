.IHR_
  &chart
    text-align center
    position relative
    margin-bottom 100px

    &h1
      font-size 25pt
      margin-bottom 0px
      font-weight 400
      line-height 1

  &loading-spinner
    position absolute
    top 35%
    left 49%

  &api-table
    & table
      display inline-block
      margin 0 auto
      text-align left
    & label
      text-align right
      display inline-block
      font-weight 600
      width 100%

  &table-card
    padding 0px
    background-color #475057
    color #475057

  &table-close-button
    position absolute
    right 20px
    z-index 4
    color gray
    box-shadow none
    font-size 14pt
    font-family monospace
    font-weight 600
    cursor pointer

  &table-row
    cursor pointer

  &color-increment
    font-weight 600

  &important-cell
    font-weight bold
  &color-deviation-mid-threshold
    color #ffb74d


  &color-deviation-hight-threshold
    color #c41c00
